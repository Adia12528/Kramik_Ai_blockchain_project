{
  "name": "kramik-hub",
  "version": "1.0.0",
  "description": "Engineering Student Hub - Blockchain Secured Learning Platform",
  "scripts": {
    "setup": "node scripts/setup.js",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "docker:build": "docker-compose -f docker/docker-compose.yml build",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "blockchain:compile": "cd blockchain && npx hardhat compile",
    "blockchain:deploy": "cd blockchain && npx hardhat run scripts/deploy.js --network sepolia"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "keywords": ["education", "blockchain", "engineering", "react", "nodejs"],
  "author": "Kramik Team",
  "license": "MIT"
}